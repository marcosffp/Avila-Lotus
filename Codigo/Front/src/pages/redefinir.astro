---
import '../assets/styles/auth.css';
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
---

<Layout>

    <head>
        <script>
            import { redefinir } from '../assets/scripts/redefinir.js';
            document.addEventListener('DOMContentLoaded', redefinir); 
        </script>
        <!-- Bootstrap Icons -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    </head>

    <body>
        <!-- Modal de Recuperar Senha -->
        <div id="forgot-password-modal" class="forgot-password-modal active">
            <div class="forgot-password-content">
                <h2>Recuperar Senha</h2>
                <p>Insira seu email, seu código de recuperação e sua nova senha para concluir a recuperação.</p>
                <form id="reset-password-form">
                    <div class="input-box">
                        <i class="bi bi-envelope"></i>
                        <input id="reset-email" type="email" name="email" placeholder="Digite seu email" required>
                    </div>
                    <div class="input-box">
                        <i class="bi bi-key"></i>
                        <input id="reset-code" type="text" name="code" placeholder="Código de recuperação" required>
                    </div>
                    <div class="input-box">
                        <i class="bi bi-lock"></i>
                        <input id="reset-password" type="password" name="password" placeholder="Digite sua nova senha" required>
                        <i class="bi bi-eye-slash toggle-password"></i>
                    </div>

                    <div class="messges">
                        <p id="forgot-password-message" class="text-[var(--color-primary)] text-sm mb-3"></p>
                        <p id="forgot-password-error" class="text-red-500 text-sm mb-3"></p>
                    </div>

                    <!-- Aviso sobre os requisitos da senha -->
                    <div id="password-requirements" class="text-[var(--color-primary)] text-sm mb-3">
                        A senha deve conter pelo menos:
                        <ul class="list-none ml-4 mt-1 space-y-1 font-light">
                            <li class="before:mr-1">Cinco caracteres</li>
                            <li class="before:mr-1">Uma letra maiúscula</li>
                            <li class="before:mr-1">Uma letra minúscula</li>
                            <li class="before:mr-1">Um caractere especial</li>
                            <li class="before:mr-1">Um número</li>
                        </ul>
                    </div>

                    <Button id="pwd-reset-btn">Enviar</Button>
                    
                </form>
                <a href="/auth" class="close-modal">Voltar para login</a>
            </div>
        </div>

    </body>
</Layout>