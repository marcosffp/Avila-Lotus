---
import Button from "../Button.astro";
import Input from "../Input.astro";

import "../../assets/styles/modals/client-modal.css";
---

<article class="modal hidden" id="client-modal">
  <div class="modal-content">
    <div class="service-details">
      <h2 class="service-name">Agendar Atendimento</h2>

      <div class="service-details-box">
        <!-- Valores dinâmicos -->
        <p class="service-date"></p>
        <p class="service-time"></p>
        <hr class="separator">
        <p class="service-price"></p>
      </div>
    </div>

    <form class="observation-form">
      <Input
        id="observation"
        name="observation"
        type="text"
        placeholder="Posso atrasar um pouco"
        disabled={false}
        class="observation-input">Alguma observação?</Input
      >

      <label
        for="dropzone-comprovante"
        class="mx-auto cursor-pointer flex w-full max-w-md flex-col items-center rounded-xl border-2 border-dashed border-[#544837]-400 bg-white p-6 text-center"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-10 w-10 text-[#544837]-500"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"
          ></path>
        </svg>

        <h2 class="mt-4 text-xl font-medium text-[#544837]-700 tracking-wide">
          Comprovante de Pagamento
        </h2>

        <p class="mt-2 text-[#544837]-500 tracking-wide">
          Arraste e solte ou clique para enviar seu comprovante PDF
        </p>
        <p class="mt-2 text-[#544837]-500 tracking-wide">
          <i> Tam MAX: 500KB</i>
        </p>

        <!-- Correções importantes: -->
        <input
          id="dropzone-comprovante"
          type="file"
          class="hidden"
          accept=".pdf,application/pdf"
          name="comprovante"
          required
        />

        <p class="file-name mt-2 text-[#544837]-500 font-bold"></p>
      </label>
    </form>

    <div id="pix-info" class="pix-info">
      <h3 class="pix-title">Chave PIX para pagamento</h3>
      <p class="pix-key" id="pix-key">Carregando chave PIX...</p>
    </div>

    <div class="modal-buttons">
      <Button id="client-confirm-btn">Confirmar</Button>
      <Button id="client-cancel-btn">Cancelar</Button>
    </div>
  </div>
</article>